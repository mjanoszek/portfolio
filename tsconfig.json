{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2016",
    "watch": true,
    "module": "commonjs",
    "rootDir": "portfolio/src",
    "sourceMap": true,
    "outDir": "./js",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
